<UserControl x:Class="BruTile.UI.Silverlight.MainPage" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:brutile="clr-namespace:BruTile.UI.Windows;assembly=BruTile.UI.Windows"
    xmlns:local="clr-namespace:BruTileSilverlight"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600" 
    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Grid x:Name="LayoutRoot" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <brutile:MapControl x:Name="map" ErrorMessageChanged="map_ErrorMessageChanged"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></brutile:MapControl>
        <local:GUIOverlay x:Name="GUI" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
